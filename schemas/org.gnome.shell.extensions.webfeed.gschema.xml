<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="webfeed">
    <schema path="/org/gnome/shell/extensions/webfeed/" id="org.gnome.shell.extensions.webfeed">
        <key type="i" name="update-interval">
            <default>15</default>
            <summary>Update interval(min)</summary>
            <description>Download interval (in minutes) for all RSS feeds.</description>
        </key>
        <key type="i" name="items-visible">
            <default>5</default>
            <summary>RSS Sources per page</summary>
            <description>Number of RSS Sources visible per page.</description>
        </key>
        <key type="i" name="delete-after">
            <default>12</default>
            <summary>Delete after hour.</summary>
            <description>In hour time displayed.</description>
        </key>
        <key type="as" name="rss-feeds-list">
            <default>[]</default>
            <summary>RSS feeds</summary>
            <description>List of RSS feeds sources.</description>
        </key>
        <key type="b" name="torefresh">
            <default>true</default>
            <summary>has to update</summary>
            <description>Flag to tell to refresh.</description>
        </key>
        <key type="b" name="okfornotif">
            <default>true</default>
            <summary>want notification</summary>
            <description>want notification on hot item.</description>
        </key>
        <key type="i" name="durationhotitem">
            <default>12</default>
            <summary>How long a hot item is hot(min)</summary>
            <description>How long a hot item is hot.</description>
        </key>
        <key type="i" name="delayforreceive">
            <default>12</default>
            <summary>How long to wait for receiving(s)</summary>
            <description>How long to wait for receiving request answer</description>
        </key>
    </schema>
</schemalist>
